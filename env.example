# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-site.vercel.app
NEXT_PUBLIC_SITE_NAME=Fantasy Red Zone
NEXT_PUBLIC_SITE_DESCRIPTION=Your ultimate destination for fantasy football content

# YouTube API Configuration
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=https://your-site.vercel.app/api/auth/youtube/callback
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token
YOUTUBE_API_KEY=your_youtube_api_key_optional

# Content Sources
RSS_FEED_URL=https://www.fantasypros.com/rss/nfl/news.xml
BACKUP_RSS_FEED_URL=https://www.espn.com/espn/rss/nfl/news

# News Sources Configuration
# Comma-separated list of enabled news source IDs
# Available: espn-fantasy,fantasypros,nfl-fantasy,yahoo-fantasy,rotoworld,the-athletic
NEWS_SOURCES=espn-fantasy,fantasypros,nfl-fantasy,yahoo-fantasy,rotoworld

# Authentication for premium news sites (optional)
THE_ATHLETIC_USERNAME=your_username
THE_ATHLETIC_PASSWORD=your_password

# Cron Job Security
CRON_SECRET=your-secure-cron-secret-here
REFRESH_TOKEN=your-secure-refresh-token-here

# Caching Configuration (in minutes)
YOUTUBE_CACHE_DURATION=30
RSS_CACHE_DURATION=15
NEWS_CACHE_DURATION=15

# Feature Flags
ENABLE_AI_CHAT=false
ENABLE_TEAM_INSIGHTS=false
ENABLE_NAME_GENERATOR=false
